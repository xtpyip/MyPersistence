<mapper namespace="product">
    <!--    sql方法的唯一标识:由namespace.id组成 : statementId-->
    <select id="selectAll" resultType="com.pyip.pojo.Product">
        select * from product;
    </select>
    <select id="selectOne" resultType="com.pyip.pojo.Product">
        select * from product where id = ? and name = ?;
    </select>
</mapper>